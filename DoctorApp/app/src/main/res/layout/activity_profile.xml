<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        tools:context=".Profile">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/img_profil"
            app:srcCompat="@drawable/user_profile"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="121dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_name_surname" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>
    <TextView
            android:text="Hicran ŞEVİK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40dp"
            android:id="@+id/tv_name_surname"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/img_profil" android:layout_marginBottom="67dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn_profil_upload"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>

    <Button
            android:text="Fotoğrafı Yükle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:buttonTint="@color/btn_border"
            android:id="@+id/btn_profil_upload"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_surname"
            app:layout_constraintStart_toEndOf="@+id/btn_profil_choose" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="36dp"/>

    <Button
            android:text="Fotoğraf Seç"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:buttonTint="@color/btn_border"
            android:id="@+id/btn_profil_choose"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_profil_upload"
            app:layout_constraintEnd_toStartOf="@+id/btn_profil_upload" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginEnd="31dp"
    />


</android.support.constraint.ConstraintLayout>