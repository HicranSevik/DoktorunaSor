<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        tools:context=".WritePrescription">

    <Button
            android:text="Ekle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_write_prescription"
            android:background="@drawable/button_bg"
            android:buttonTint="@color/btn_border"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintStart_toEndOf="@+id/et_write_prescription"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="19dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/et_write_prescription"
            android:autofillHints="@color/white"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:textColorHint="@color/darkGrey"
            android:hint="İlaçları giriniz"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_write_prescription"
            app:layout_constraintTop_toTopOf="@+id/btn_write_prescription" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_write_prescription" android:layout_marginEnd="19dp"
    />
    <TextView
            android:text="REÇETE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/constraintLayout"
            android:background="@drawable/layout_border"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="37dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn_write_prescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" android:layout_marginEnd="19dp">

        <TextView
                android:text="Reçete bulunmamaktadır..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/tv_medicines"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>